{
  "manifest_version": 2,
  "name": "automation",
  "description": "Add automation extra time",
  "version": "2.0",
  "browser_action": {
    "default_icon": "public/icon.png",
    "icons": {
      "16": "public/icon.png",
      "48": "public/icon.png",
      "128": "public/icon.png"
    },
    "default_popup": "public/popup.html"
  },
  "web_accessible_resources": [
    "public/icon.png"
  ],
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "css": [
        "public/styles.css"
      ],
      "js": [
        "lib/bundle.js"
      ],
      "matches": [
        "http://automation.1st.co.com:8888/*"
      ]
    }
  ]
}